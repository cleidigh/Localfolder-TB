{
	"manifest_version": 2,
	"name": "__MSG_extensionName__",
	"description": "__MSG_extensionDescription__",
	"version": "4.0.0-b3",
	"author": "l'Abb√© Christian-Philippe Chanut (philoux), Christopher Leidigh",
	"applications": {
		"gecko": {
			"id": "localfolder@philoux.eu",
			"strict_min_version": "91.0",
			"strict_max_version": "115.*"
		}
	},
	"browser_action": {
		"default_area": "maintoolbar",
		"default_title":"LocalFolders",
		"default_icon": "chrome/skin/classic/LocalFolders-32px.png",
		"default_popup": "chrome/content/test.html"
		
	  },
	"experiment_apis": {
		"WindowListener": {
			"schema": "api/WindowListener/schema.json",
			"parent": {
				"scopes": [
					"addon_parent"
				],
				"paths": [
					[
						"WindowListener"
					]
				],
				"script": "api/WindowListener/implementation.js"
			}
		},
		
		"NotifyTools": {
            "schema": "api/NotifyTools/schema.json",
            "parent": {
              "scopes": ["addon_parent"],
              "paths": [["NotifyTools"]],
              "script": "api/NotifyTools/implementation.js",
              "events": ["startup"]
            }
          }
	},
	"background": {
		"scripts": [
			"background.js"
		]
	},
	"icons": {
		"64": "chrome/skin/classic/LocalFolders-64px.png",
		"32": "chrome/skin/classic/LocalFolders-32px.png"
	},
	"default_locale": "en_US"
}