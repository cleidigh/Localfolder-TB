{
	"manifest_version": 2,
	"name": "__MSG_extensionName__",
	"description": "__MSG_extensionDescription__",
	"version": "4.2.0-b2",
	"author": "l'Abb√© Christian-Philippe Chanut (philoux), Christopher Leidigh",
	"applications": {
		"gecko": {
			"id": "localfolder@philoux.eu",
			"strict_min_version": "140.0",
			"strict_max_version": "142.*"
		}
	},
	"browser_action": {
		"type":"menu",
    "default_icon": "chrome/skin/classic/LocalFolders-32px.png",
    "default_title": "LocalFolders",
		"allowed_spaces": ["settings"]
  },
	"permissions" : [
      "activeTab",
      "tabs",
      "menus"
    ],
	"experiment_apis": {
		"WindowListener": {
			"schema": "api/WindowListener/schema.json",
			"parent": {
				"scopes": [
					"addon_parent"
				],
				"paths": [
					[
						"WindowListener"
					]
				],
				"script": "api/WindowListener/implementation.js"
			}
		},
		
		"NotifyTools": {
            "schema": "api/NotifyTools/schema.json",
            "parent": {
              "scopes": ["addon_parent"],
              "paths": [["NotifyTools"]],
              "script": "api/NotifyTools/implementation.js",
              "events": ["startup"]
            }
          }
	},
	"background": {
		"scripts": [
			"background.js"
		], 
		"type": "module"
	},
	"icons": {
		"64": "chrome/skin/classic/LocalFolders-64px.png",
		"32": "chrome/skin/classic/LocalFolders-32px.png"
	},
	"default_locale": "en_US"
}